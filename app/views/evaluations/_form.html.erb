<h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900">Add Evaluation</h1>
<%= simple_form_for([@presentation, Evaluation.new], remote: true) do |f| %>
  <div class="flex flex-col gap-4">
    <%= f.input :feedback,           
          required: true, 
          autofocus: true,
          input_html: {class: "form-input h-36" },
          label_html: { class: "form-label" } %>
    <%= f.input :points, required: true, 
          input_html: { class: 'form-input' },
          label_html: { class: "form-label" } %>
  </div>
  <%= f.button :submit, "Submit evaluation", class: "mt-8 w-full text-base text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg px-5 py-3 text-center" %>
<% end %>

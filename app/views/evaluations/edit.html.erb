<div class="flex items-center justify-center">
  <div class="flex flex-col gap-5 w-[50rem] rounded-lg px-10 py-8 shadow-md  justify-center bg-white">
    <%= link_to @presentation, class:"text-xl font-medium text-blue-600" do %>
      <i class="fa fa-arrow-left"></i> <strong>Back</strong>
    <% end %>
    <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900">Edit Evaluation</h1>
    <%= simple_form_for([@presentation, @evaluation], remote: true) do |f| %>
      <div class="flex flex-col gap-4">
        <%= f.input :feedback,           
          required: true, 
          autofocus: true,
          input_html: {class: "form-input h-36" },
          label_html: { class: "form-label" } %>
        <%= f.input :points, required: true, 
          input_html: { class: 'form-input' },
          label_html: { class: "form-label" } %>
      </div>
      <%= f.button :submit, "Submit", class: "w-full mt-8 text-base text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg px-5 py-3 text-center" %>
    <% end %>
  </div>
</div>

<div class="flex items-center justify-center">
  <div class="flex flex-col gap-5 w-[35rem] rounded-lg px-10 py-12 shadow-md  justify-center">
    <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">Edit account</h1>
    <% if current_user.admin? %>
      <p>You are currently an <span class="font-bold text-blue-600">admin</span></p>
    <% end %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="flex flex-col gap-4">
        <%= f.input :email, 
          required: true, 
          autofocus: true,
          input_html: { autocomplete: "email", class: "form-input" },
          label_html: { class: "form-label" } %>
        <%= f.input :name,
          required: false,
          input_html: {autocomplete: "name", class: "form-input" },
          label_html: { class: "form-label" } %>
        <%= f.input :password,
          hint: content_tag(:span, "Leave blank if you don't want to change", class: "form-hint"),
          required: false,
          input_html: { autocomplete: "new-password", class: "form-input" },
          label_html: { class: "form-label" } %>
        <%= f.input :password_confirmation,
          required: false,
          input_html: { autocomplete: "new-password" , class: "form-input" },
          label_html: { class: "form-label" } %>
        <%= f.input :current_password,
          hint: content_tag(:span, "Need current password to confirm changes", class: "form-hint"),
          required: true,
          error: content_tag(:span, "Please enter your password", class: "block text-base font-medium text-red-600 mt-1"),
          input_html: { autocomplete: "current-password" , class: "form-input" },
          label_html: { class: "form-label" } %>
        <%= f.input :admin, as: :boolean,  
          input_html: { class: "form-checkbox", checked: current_user.admin?}, 
          label_html: { class: "form-label" } %>
      </div>
      <%= f.button :submit, "Update", class: "mt-3 w-full text-base text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg px-5 py-3 text-center" %>
    <% end %>
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "font-medium text-blue-600" %>
    <%= link_to "Back", presentations_path, class: "font-medium text-blue-600"%>
  </div>
</div>

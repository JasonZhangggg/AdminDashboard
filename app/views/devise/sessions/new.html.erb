<div class="flex items-center justify-center">
  <div class="flex flex-col gap-5 w-[35rem] rounded-lg px-10 py-12 shadow-md  justify-center">
    <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">Login in</h1>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="flex flex-col gap-4">
        <%= f.input :email, 
          required: true, 
          input_html: { autocomplete: "name", class: "form-input" },
          label_html: { class: "form-label" } %>
        <%= f.input :password,
          required: true,
          hint: content_tag(:span, ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-hint"),
          input_html: { autocomplete: "new-password", class: "form-input" },
          label_html: { class: "form-label" } %>
      </div>
      <%= f.button :submit, "Login", class: "mt-8 w-full text-base text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg px-5 py-3 text-center" %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
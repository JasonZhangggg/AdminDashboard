<% presentations.each do |presentation| %>
  <%= link_to presentation do%>
    <div class="flex justify-between bg-[#eff1f1] hover:bg-[#e4e4e8] p-6 rounded-md">
      <div class="flex flex-col gap-4">
        <div class = "flex gap-4">
          <%= render 'shared/avatar', letter: presentation.user.name[0].upcase, id: presentation.user_id%>
          <div>
            <h1 class = "font-semibold text-xl"><%=presentation.title%></h1>
            <div class="text-gray-500 flex">
              <p>
                <span class="font-semibold">
                  <%=presentation.user.name.capitalize%>
                </span>
                creted on <%= presentation.date.strftime("%A, %B %d, %Y")%>
              </p>
            </div>
          </div>
        </div>
        <p class = "text-gray-500"><%=presentation.description%></p>
      </div>
      <div class = "card-footer">
        <%= button_to presentation,
                  method: :delete, data: {confirm: "Are you sure ?" } do %>
          <i class="fa fa-trash-o text-3xl"></i>
        <%end%>
      </div>
    </div>
  <%end%>
<% end %>
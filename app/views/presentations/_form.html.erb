<div class="flex items-center justify-center ">
  <div class="flex flex-col gap-5 w-[50rem] rounded-lg px-10 py-12 shadow-md  justify-center bg-white">
    <%= link_to presentations_path, class:"text-xl font-medium text-blue-600" do %>
      <i class="fa fa-arrow-left"></i> Back
    <% end %>
    <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">Creat a presentation</h1>
    <%= simple_form_for(@presentation) do |f| %>
      <div class="flex flex-col gap-4">
        <%= f.input :title,
          required: true, 
          autofocus: true,
          input_html: {class: "form-input" },
          label_html: { class: "form-label" } %>
        <%= f.input :description,           
          required: true, 
          autofocus: true,
          input_html: {class: "form-input h-48" },
          label_html: { class: "form-label" } %>
        <%= f.input :date, required: true, label: 'Presentation Date', as: :date, 
          input_html: { class: 'bg-gray-50 border border-gray-300 text-gray-900 text-base rounded-lg' },
          label_html: { class: "form-label" } %>
      </div>
      <%= f.button :submit, "Submit", class: "mt-8 w-full text-base text-white bg-blue-600 hover:bg-blue-700 font-medium rounded-lg px-5 py-3 text-center" %>
    <% end %>
  </div>
</div>
